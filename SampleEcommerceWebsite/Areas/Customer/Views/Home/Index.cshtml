@model IEnumerable<Product>

<div class="container">
    <div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                        <div class="card border-success mb-3" style="max-width: 20rem;">
                            <div class="card-header text-center">@product.Name</div>
                            <div class="card-body">
                                
                                <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
                                    <rect width="100%" height="100%" fill="white"></rect>
                                    <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
                                    <image href="@product.ImageUrl" width="100%" height="100%" />
                                    <p class="card-title h5 text-warning opacity-100 text-center pt-2">Price: $<span>@product.ListPrice</span></p>
                                    <p class="text-dark opacity-75 text-center">As low as: $<span>@product.Price100</span></p>

                                </svg>
                                <a asp-action="Details"
                                asp-route-productId="@product.Id"
                                class="btn btn-outline-primary bg-gradient border-0 form-control">
                                    <i class="bi bi-info-circle"></i>
                                    </a>
                                </div>
                            
                        </div>
                        

                </div>
            </div>
        </div>
    }
</div>
</div>



